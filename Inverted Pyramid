import java.util.*;
class inverted{
    public static void main(String args[]){
        int n,i,k,j;
        Scanner s=new Scanner(System.in);
        System.out.println("Enter the number of rows:");
        n=s.nextInt();
        for(i=0;i<n;i++) {
            for(j=0;j<i;j++) {
            System.out.print(" ");
        }
        for(k=0;k<n-i;k++){
             System.out.print("* ");
          }
          System.out.println();
       }
    }
}
